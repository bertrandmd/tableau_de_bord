<header>
  <div class="navbar navbar-default navbar-fixed-top " style="background-color: rgb(0,160,220);">
    <div class="container" "-fluid">
      <div class="header container" style="background-color: rgb(0,160,220);">
        <div class="row">
          <div class="col-md-7  ">
            <div id="titlePrincipal" style="color:#fff;"><h2 id="titre"><i class="fa fa-tachometer"></i> Tableau de Bord Inventaire Icare</h2></div>
          </div>
          <div class="col-md-4 {{#if_eq role 'superAdmin'}}col-md-offset-0{{else}}col-md-offset-1{{/if_eq}}" style="padding-top: 20px">
            {{#if user}}
            {{#if_eq role 'superAdmin'}}
            <div class="col-md-4 col-md-offset-2" style="width: 190px">
            {{else}}
            {{/if_eq}}
            <div class="col-md-2 col-md-offset-5">
              <form action="/logout" method="POST" class="form-inline" style="width: 250px">
                <label for="inputDeconnect" style="color:#fff;padding-right: 15px;">{{user}}</label>
                <input type="hidden" name="_method" value="DELETE">
                <input id="inputDeconnect" type="submit" class="btn btn-danger" value="Déconnexion">
              </form>
            </div>
            </div>
            {{#if_eq role 'superAdmin'}}
            <div class="col-md-1 col-md-offset-2">
              <a href="#administration" role="button" class="btn btn-warning" data-toggle="modal">Administration</a>
            </div>
            {{/if_eq}}
            {{else}}
            <div class="col-md-2 col-md-offset-9">
              <a href="#connexion" role="button" class="btn btn-primary" data-toggle="modal">Connexion</a>
            </div>
          </div>
          {{/if}}
          </div>
        </div>
        <div class="row" style="padding-bottom: 15px">
          <div class="col-md-9">
            {{#if_eq role 'superAdmin'}}
            <a href="#myModal" role="button" class="btn btn-primary" data-toggle="modal">Open Map</a>
            {{else if_eq role 'admin'}}
            <a href="#myModal" role="button" class="btn btn-primary" data-toggle="modal">Open Map</a>
            {{/if_eq}}
            {{#if user}}
            <span style="text-align : right; PADDING : 15PX;color:#fff;">Année d'inventaire : </span>
            <div class="btn-group btn-annee" id='anneeSelect'>
              <button type="button" class="btn btn-success annee">2010</button>
              <button type="button" class="btn btn-success annee active">2012</button>
            </div>
            <span style="text-align : right; PADDING : 15PX;color:#fff;">Polluants affichés :</span>
            <select id="dropdown-polluants" multiple="multiple"></select>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
